# ========================================
# Lark API Configuration
# ========================================
# Lark Open Platform で App を作成して取得
# https://open.larksuite.com/app

# App ID (必須)
LARK_APP_ID=cli_xxxxxxxxxxxxxxxx

# App Secret (必須)
LARK_APP_SECRET=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Base App Token (必須)
# Lark Base のURLから取得: https://xxx.larksuite.com/base/xxxAPPTOKENxxx
LARK_BASE_APP_TOKEN=xxxAPPTOKENxxx

# ========================================
# Table IDs
# ========================================
# 各テーブルのIDはBaseの設定から取得
LARK_TABLE_CONTRACTS=tblxxxxxxxx
LARK_TABLE_QUALIFIED_PERSONS=tblxxxxxxxx
LARK_TABLE_SUBCONTRACTORS=tblxxxxxxxx
LARK_TABLE_EQUIPMENT=tblxxxxxxxx
LARK_TABLE_PROCESS_MASTER=tblxxxxxxxx
LARK_TABLE_SCHEDULES=tblxxxxxxxx

# ========================================
# GitHub Configuration (Miyabi用)
# ========================================
GITHUB_TOKEN=ghp_your_github_token_here
REPOSITORY=PLark-droid/construction-lark

# ========================================
# Anthropic API Key (Agent用)
# ========================================
ANTHROPIC_API_KEY=sk-ant-your_anthropic_key_here

# ========================================
# Development Options
# ========================================
DEVICE_IDENTIFIER=MyComputer
LOG_DIRECTORY=.ai/logs
DEFAULT_CONCURRENCY=2
